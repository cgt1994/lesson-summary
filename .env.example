# AI Provider (choose one)
# Option 1: Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Model Selection (gemini-1.5-pro or claude-3-5-sonnet-20241022)
AI_MODEL=gemini-1.5-pro

# Google Workspace Settings
GMAIL_SENDER_EMAIL=your.email@gmail.com

# Optional: Fireflies.ai Integration
FIREFLIES_API_KEY=your_fireflies_api_key_here

# Student Database (optional - leave empty to use filename parsing)
STUDENT_DB_PATH=students.json

# File Paths
TRANSCRIPTS_FOLDER=./transcripts
SLIDES_FOLDER_ID=your_google_drive_folder_id

# Email Settings
AUTO_SEND_EMAIL=false  # Set to true to auto-send, false to create drafts
